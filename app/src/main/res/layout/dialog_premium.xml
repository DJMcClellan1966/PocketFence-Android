<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Premium Icon/Header -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_star_big_on"
            android:tint="@color/accent"
            android:contentDescription="@string/premium_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="@string/premium_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="@string/premium_subtitle"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:gravity="center" />

        <!-- Premium Features List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp">

            <!-- Feature 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/checkbox_on_background"
                    android:tint="@color/status_active"
                    android:contentDescription="Check" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="@string/premium_feature_no_ads"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />
            </LinearLayout>

            <!-- Feature 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/checkbox_on_background"
                    android:tint="@color/status_active"
                    android:contentDescription="Check" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="@string/premium_feature_advanced_stats"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />
            </LinearLayout>

            <!-- Feature 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/checkbox_on_background"
                    android:tint="@color/status_active"
                    android:contentDescription="Check" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="@string/premium_feature_multiple_profiles"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />
            </LinearLayout>

            <!-- Feature 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/checkbox_on_background"
                    android:tint="@color/status_active"
                    android:contentDescription="Check" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="@string/premium_feature_priority_support"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary" />
            </LinearLayout>
        </LinearLayout>

        <!-- Subscription Options Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_subscription_plan"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp" />

        <!-- Monthly Subscription Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/monthlyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subscription_monthly"
            android:textSize="16sp"
            android:padding="16dp"
            app:cornerRadius="8dp"
            android:layout_marginBottom="12dp" />

        <!-- Yearly Subscription Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/yearlyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subscription_yearly"
            android:textSize="16sp"
            android:padding="16dp"
            app:cornerRadius="8dp"
            style="@style/Widget.Material3.Button.Elevated"
            android:layout_marginBottom="8dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginVertical="16dp" />

        <!-- Legacy One-Time Purchase (Optional) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/or_one_time_purchase"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/purchaseButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/purchase_premium_lifetime"
            android:textSize="14sp"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_marginBottom="8dp" />

        <!-- Restore Purchases Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/restoreButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/restore_purchases"
            android:textSize="14sp"
            style="@style/Widget.Material3.Button.TextButton" />

        <!-- Loading indicator -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
